<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reports</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        table {
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid white;
        }

        button{
            all: unset;
        }

        .reviewed:hover{
            color: red;
            cursor: pointer;
            
        }
        .dismissed:hover{
            color: green;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <!-- Profile Button (Top Left) -->
        <% if (user) { %>
            <a href="/profile" class="profile-btn">ðŸ‘¤ <%= user.username %></a>
            <span><%= user.role %></span>
        <% } %>

        <h1>Flick Review</h1>

        <!-- Logout or Login/Signup (Top Right) -->
        <div class="nav-links">
            <% if (user) { %>
                <% if (user.role === 'mod') { %>
                   <a href="/report">Reports</a>
                <% } %>
                <a href="/change-role">Change Role</a>
                <a href="/logout">Logout</a>
            <% } else { %>
                <a href="/login">Login</a>
                <a href="/signup">Sign Up</a>
            <% } %>
        </div>
    </div>
    <div class="container">
        <h4>Pending Reviews</h4>

        <% if (pendingReports.length === 0) { %>
            <p>No reports found.</p>
        <% } else { %>
            <table>
                <tr>
                    <th>Report ID</th>
                    <th>Reporter</th>
                    <th>Review Author</th>
                    <th>Review Text</th>
                    <th>Reason</th>
                    <th>Timestamp</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                <% pendingReports.forEach(report => { %>
                    <tr>
                        <td><%= report.reportId %></td>
                        <td><%= report.reporterUsername %></td>
                        <td><%= report.reviewAuthor %></td>
                        <td><a href="/movie/<%= report.movieID %>"><%= report.reviewText %></a></td>
                        <td><%= report.reportReason %></td>
                        <td><%= new Date(report.reportTimestamp).toLocaleString("en-US", { 
                                hour: "2-digit", minute: "2-digit", hour12: false, 
                                month: "short", year: "numeric" 
                            }) %>
                        </td>
                        <td><%= report.reportStatus %></td>
                        <td>
                            <form action="/moderate" method="POST">
                                <input type="hidden" name="reportId" value="<%= report.reportId %>">
                                <input type="hidden" name="reviewId" value="<%= report.targetReviewId %>">

                                <button type="submit" name="action" value="Reviewed" class="reviewed">
                                    <span class="material-icons">delete</span>
                                </button>
                                <button type="submit" name="action" value="Dismissed" class="dismissed">
                                    <span class="material-icons">done</span>
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </table>
        <% } %>

        <h4>Resolved Reports</h4>

        <% if (resolvedReports.length === 0) { %>
            <p>No reports found.</p>
        <% } else { %>
            <table>
                <tr>
                    <th>Report ID</th>
                    <th>Reporter</th>
                    <th>Review Author</th>
                    <th>Review Text</th>
                    <th>Reason</th>
                    <th>Timestamp</th>
                    <th>Status</th>
                </tr>
                <% resolvedReports.forEach(report => { %>
                    <tr>
                        <td><%= report.reportId %></td>
                        <td><%= report.reporterUsername %></td>
                        <td><%= report.reviewAuthor %></td>
                        <td><a href="/movie/<%= report.movieID %>"><%= report.reviewText %></a></td>
                        <td><%= report.reportReason %></td>
                        <td><%= new Date(report.reportTimestamp).toLocaleString("en-US", { 
                            hour: "2-digit", minute: "2-digit", hour12: false, 
                            month: "short", year: "numeric" 
                        }) %>
                        </td>
                        <td><%= report.reportStatus %></td>
                    </tr>
                <% }) %>
            </table>
        <% } %>
    </div>
</body>
</html>